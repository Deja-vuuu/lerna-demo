{
    "compilerOptions": {
      "jsx": "react",
      "target": "es5", 
      "module": "esnext", 
      "allowJs": true, 
      "strict": true, 
      "importHelpers": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "suppressImplicitAnyIndexErrors": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "declaration": true,
      "declarationDir": "dist",
    },
    "exclude": [
      "node_modules/**"
    ],
    "include": [
      "src/**/*"
    ]
  }